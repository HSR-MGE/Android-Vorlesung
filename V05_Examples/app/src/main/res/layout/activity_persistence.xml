<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editext_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:text="Inhalt fÃ¼r text-basierte API's"
        tools:ignore="LabelFor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".persistence.PersistenceActivity"
            android:padding="8dp">

            <!-- App Specific Files -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App-Specific Files"
                style="@style/SubTitle" />

            <Button
                android:id="@+id/button_asf_write_internal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write to internal storage" />

            <Button
                android:id="@+id/button_asf_read_internal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read from internal storage" />

            <Button
                android:id="@+id/button_asf_write_external"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write to external storage" />

            <Button
                android:id="@+id/button_asf_read_external"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read from external storage" />

            <!-- Preferences -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferences"
                style="@style/SubTitle" />

            <Button
                android:id="@+id/button_preferences_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write" />

            <Button
                android:id="@+id/button_preferences_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read" />

            <!-- Database -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Database"
                style="@style/SubTitle" />

            <Button
                android:id="@+id/button_database_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert using SQLite API" />

            <Button
                android:id="@+id/button_database_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read using SQLite API" />

            <Button
                android:id="@+id/button_room_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert using Room API" />

            <Button
                android:id="@+id/button_room_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read using Room API" />

            <!-- Media -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media"
                style="@style/SubTitle" />

            <Button
                android:id="@+id/button_media_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write" />

            <Button
                android:id="@+id/button_media_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read" />

            <!-- Documents -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documents"
                style="@style/SubTitle" />

            <Button
                android:id="@+id/button_document_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write" />

            <Button
                android:id="@+id/button_document_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>