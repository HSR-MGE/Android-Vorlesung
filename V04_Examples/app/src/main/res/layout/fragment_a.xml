    <fragment android:name="ch.ost.rj.mge.v04.examples.FragmentB"
        android:id="@+id/placeholder_for_second_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

</LinearLayout>