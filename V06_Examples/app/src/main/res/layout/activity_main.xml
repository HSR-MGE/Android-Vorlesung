<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observer"
            style="@style/SubTitle" />

        <Button
            android:id="@+id/button_start_observer_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observer Demo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broadcasts"
            style="@style/SubTitle" />

        <Button
            android:id="@+id/button_register_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Receiver (Dynamic)" />

        <Button
            android:id="@+id/button_unregister_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Unregister Receiver (Dynamic)" />

        <Button
            android:id="@+id/button_send_broadcast_implicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Broadcast (Implicit)" />

        <Button
            android:id="@+id/button_send_broadcast_explicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Broadcast (Explicit)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services"
            style="@style/SubTitle" />

        <Button
            android:id="@+id/button_run_started_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run Started Service" />

        <Button
            android:id="@+id/button_stop_started_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Stop Started Service" />

        <Button
            android:id="@+id/button_connect_to_bound_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Connect to Bound Service" />

        <Button
            android:id="@+id/button_interact_with_bound_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Interact with Bound Service" />

        <Button
            android:id="@+id/button_disconnect_from_bound_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Disconnect from Bound Service" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backgrounding"
            style="@style/SubTitle" />

        <TextView
            android:id="@+id/textview_async_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:text="n/a" />

        <Button
            android:id="@+id/button_run_async_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Run AsyncTask" />

        <Button
            android:id="@+id/button_run_executor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run with Executor" />

    </LinearLayout>

</ScrollView>